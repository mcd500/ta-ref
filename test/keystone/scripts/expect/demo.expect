#!/usr/bin/expect

set timeout 30
set PORT $::env(PORT)
set USER $::env(USER)
set IP_ADDR $::env(IP_ADDR)
set PASSWD $::env(PASSWD)
set PS1 $::env(PS1)

spawn ssh $USER@$IP_ADDR -p $PORT
expect "*(yes/no)? " { 
    send "yes\r"
    expect "*?assword" {
        send "$PASSWD\r"
    }
}

expect "$PS1" {
    send "export PS1=\"# \"\r"
}

expect "# " {
    send "insmod keystone-driver.ko\r"
}
expect "# " {
    send "cd out\r"
}
expect "# " {
    send "./App.client  Enclave.eapp_riscv eyrie-rt\r"
    expect "main start\r" {} timeout {
        exit 1
    }
    expect "main end\r" {} timeout {
        exit 1
    }
}

expect "# " {
    send "ls -lsa .\r"
}

expect "# " {
    send "poweroff\r"
}

expect eof

exit
