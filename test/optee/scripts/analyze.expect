#!/usr/bin/expect

set timeout 30
set PORT $::env(PORT)
set USER $::env(USER)
set IP_ADDR $::env(IP_ADDR)
set PASSWD $::env(PASSWD)
set PS1 $::env(PS1)

# optee doesn't hold ssh in qemu
spawn ssh $USER@$IP_ADDR -p $PORT
expect "*(yes/no)? " { 
    send "yes\r"
    expect "*?assword" {
        send "$PASSWD\r"
    }
}

expect "$PS1" {
    send "export PS1=\"# \"\r"
}

expect "# " {
    send "cd out\r"
}

expect "# " {
    send "sudo ./optee_ref_ta\r"
    expect "*start" {} timeout {
        exit 1
    }
    expect "*succeed" {} timeout {
        exit 1
    }
}

expect "# " {
    send "ls -lsa .\r"
    expect "shared_mem" {} timeout {
        exit 1
    }
    expect "analyzer" {} timeout {
        exit 1
    }
}

expect "# " {
    send "./analyzer shared_mem Enclave.nm\r"
    expect "baseaddr: 0x" {} timeout {
        exit 1
    }
}

expect "# " {
    send "exit\r"
}

expect eof

exit
