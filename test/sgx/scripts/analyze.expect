#!/usr/bin/expect

set timeout 1200
set PORT $::env(PORT)
set USER $::env(USER)
set IP_ADDR $::env(IP_ADDR)
set PASSWD $::env(PASSWD)

# optee doesn't hold ssh in qemu
spawn ssh $USER@$IP_ADDR -p $PORT
expect "*(yes/no)? " { 
    send "yes\r"
    expect "*?assword" {
        send "$PASSWD\r"
    }
}

expect "$ " {
    send "export PS1=\"# \"\r"
}

expect "# " {
    send "cd /home/gitlab/out\r"
}

expect "# " {
    send "./sgx_app\r"
    expect "Info: Enclave successfully returned" {} timeout {
        exit 1
    }
}

expect "# " {
    send "ls -lsa .\r"
    expect "shared_mem" {} timeout {
        exit 1
    }
}

expect "# " {
    send "./analyzer shared_mem Enclave.nm\r"
    expect "baseaddr: 0x" {} timeout {
        exit 1
    }
}

expect "# " {
    send "test -f app_shared_mem && ./analyzer app_shared_mem App.nm\r"
    expect "baseaddr: 0x" {} timeout {
        exit 1
    }
}

expect "# " {
    send "exit\r"
}

expect eof

exit
